<%- include('partials/header.ejs') %>

<main>
  <div>
    <h1 style="text-align: center;">Get In Touch With Us!!</h1>
    
    <div id="registerForm">
      <form action="/contactus" method="post">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" class="input-field" placeholder="Can change your preferred name" required>
        <br>
        
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" class="input-field" placeholder="Email Id you want us to contact on" required>
        <br>
        
        <label for="subject">Subject:</label>
        <input type="text" id="subject" name="subject" class="input-field" required>
        <br>
        
        <label for="message">Message:</label>
        <br>
        <input type="text" id="message" name="message" class="input-field" style="height: 100px;vertical-align: top;" required>
        <br>
        <div style="display: flex; align-items: center;"></div>
          <% if (message!=" "){ %>
            <p  style="color: red; margin-left: 500px; margin-right: 10px;"><%= message %></p>
          <% } %>
        
        <button type="submit" class="btn">Submit</button>
        </div>
      </form>
    </div>
  </div>
</main>

  <%- include('partials/footer.ejs') %>